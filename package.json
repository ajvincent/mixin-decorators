{
  "name": "mixin-decorators",
  "version": "1.0.0",
  "description": "Mixin classes via decorators",
  "type": "module",
  "main": "dist/exports.js",
  "types": "dist/exports.d.ts",
  "scripts": {
    "all": "npm run clean && npm run build && npm run test && npm run eslint",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist fixtures/*.d.ts fixtures/*.js fixtures/*.js.map source/*.d.ts source/*.js source/*.js.map spec/*.d.ts spec/*.js spec/*.js.map spec/_types/*.d.ts spec/_types/*.js spec/_types/*.js.map spec/support/*.d.ts spec/support/*.js spec/support/*.js.map",
    "eslint": "eslint fixtures source spec",
    "test": "jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajvincent/mixin-decorators.git"
  },
  "keywords": [
    "mixins",
    "decorators",
    "typescript"
  ],
  "author": "Alexander J. Vincent <ajvincent@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/ajvincent/mixin-decorators/issues"
  },
  "homepage": "https://github.com/ajvincent/mixin-decorators#readme",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.0",
    "@types/jasmine": "^4.3.5",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jasmine": "^5.1.0",
    "type-fest": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
